NODE_ENV=development
PORT=8080
CLIENT_ORIGIN=http://localhost:5173
MONGO_URI=mongodb://127.0.0.1:27017/neurochat
JWT_ACCESS_SECRET=replace-with-strong-secret-at-least-32-chars
JWT_REFRESH_SECRET=replace-with-strong-refresh-secret-at-least-32-chars
JWT_ACCESS_TTL=15m
JWT_REFRESH_TTL=30d
MAX_FILE_SIZE_MB=50
# AI Configuration - Choose one provider: openai, gemini, qwen, deepseek
AI_PROVIDER=openai

# OpenAI
OPENAI_API_KEY=sk-xxx

# Google Gemini
GEMINI_API_KEY=your-gemini-api-key-here

# Alibaba Qwen
QWEN_API_KEY=your-qwen-api-key-here

# DeepSeek
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# Feature flags (optional)
FEATURE_REDIS=false
FEATURE_S3=false
FEATURE_BULLMQ=false

# Redis (if enabled)
REDIS_URL=redis://localhost:6379

# Test database
MONGO_URI_TEST=mongodb://127.0.0.1:27017/neurochat_test